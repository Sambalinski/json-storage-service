<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <!-- Configure the Console appender -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy E HH:mm:ss.SSS} %highlight(%-5level) [%cyan(%.-15thread)] %yellow(%.40c{2}):
                %msg%n%throwable
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="Console"/>
    </root>
</configuration>
